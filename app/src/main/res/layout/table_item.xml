<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginLeft="@dimen/dimen_16"
        android:layout_marginRight="@dimen/dimen_16"
        android:padding="@dimen/dimen_4"
        android:layout_margin="@dimen/dimen_8"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            tools:text="17"
            android:id="@+id/position"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            tools:srcCompat="@drawable/ic_play"
            android:layout_marginStart="@dimen/dimen_8"
            app:layout_constraintLeft_toRightOf="@id/position"
            app:layout_constraintTop_toTopOf="@id/position"
            app:layout_constraintBottom_toBottomOf="@id/position"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="ManCity"
            android:id="@+id/short_name"
            android:layout_marginStart="@dimen/dimen_8"
            app:layout_constraintLeft_toRightOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="93"
            android:id="@+id/match_day"
            android:layout_marginEnd="@dimen/dimen_16"
            app:layout_constraintRight_toLeftOf="@id/goals"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="73"
            android:id="@+id/goals"
            android:layout_marginEnd="@dimen/dimen_16"
            app:layout_constraintRight_toLeftOf="@id/point"
            app:layout_constraintTop_toTopOf="@id/point"
            app:layout_constraintBottom_toBottomOf="@id/point"
            android:layout_width="@dimen/dimen_16"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            tools:text="93"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/point"
            android:layout_marginStart="@dimen/dimen_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>